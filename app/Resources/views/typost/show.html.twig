{% extends 'base.html.twig' %}

{% block body %}
    <h1>Typost</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ typost.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ typost.nom }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if typost.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ typost.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ typost.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ typost.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ typost.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ typost.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_typost_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_typost_edit', { 'id': typost.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
